<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.site" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Adopte_une_biere</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="../img/icone_app.png" />

        <splash src="../img/loading.jpg" density="land-hdpi"/>
        <splash src="../img/loading.jpg" density="land-ldpi"/>
        <splash src="../img/loading.jpg" density="land-mdpi"/>
        <splash src="../img/loading.jpg" density="land-xhdpi"/>

        <splash src="../img/loading.jpg" density="port-hdpi"/>
        <splash src="../img/loading.jpg" density="port-ldpi"/>
        <splash src="../img/loading.jpg" density="port-mdpi"/>
        <splash src="../img/loading.jpg" density="port-xhdpi"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="../img/icone_app.png" />
    </platform>

    <platform name="windows">
        <icon src="../img/icone_app.png" />
    </platform>

    <preference name="SplashScreenDelay" value="10000" />

</widget>
